@using Microsoft.AspNetCore.Mvc.TagHelpers
@model OffersPlatform.Application.DTOs.CompanyDto

<h2>@Model.Name</h2>
<p><strong>Description:</strong> @Model.Description</p>
<p><strong>Contact Info:</strong> @Model.PhoneNumber</p>

<form asp-action="UpdateProfile" method="post">
    <div class="form-group">
        <label for="Name">Company Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" />
    </div>
    <div class="form-group">
        <label for="Description">Description</label>
        <textarea class="form-control" id="Description" name="Description">@Model.Description</textarea>
    </div>
    <div class="form-group">
        <label for="ContactInfo">Contact Info</label>
        <input type="text" class="form-control" id="ContactInfo" name="ContactInfo" value="@Model.PhoneNumber" />
    </div>
    <button type="submit" class="btn btn-primary">Update Profile</button>
    <a asp-controller="CompanyOffers" asp-action="Index" class="btn btn-success">Add New Offer</a>

</form>
