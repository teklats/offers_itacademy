@model OffersPlatform.Application.DTOs.OfferDto

<div class="container py-5">
    <h2 class="text-center mb-4">ðŸ“¦ Offer Details</h2>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <div class="text-center mb-4">
                            <img src="@Model.ImageUrl" class="img-thumbnail shadow-sm" style="max-height: 250px; max-width: 100%; object-fit: contain;" alt="Offer Image" />
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted mb-4">No image uploaded for this offer.</div>
                    }

                    <table class="table table-bordered">
                        <tbody>
                        <tr><th scope="row">Name</th><td>@Model.Name</td></tr>
                        <tr><th scope="row">Description</th><td>@Model.Description</td></tr>
                        <tr><th scope="row">Price</th><td>$@Model.UnitPrice</td></tr>
                        <tr><th scope="row">Available Quantity</th><td>@Model.AvailableQuantity</td></tr>
                        <tr><th scope="row">Created At</th><td>@Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td></tr>
                        <tr><th scope="row">Expires At</th><td>@Model.ExpiresAt.ToString("yyyy-MM-dd HH:mm")</td></tr>
                        </tbody>
                    </table>

                    <div class="text-end mt-3">
                        <a asp-action="Profile" class="btn btn-secondary">â¬… Back to Profile</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
